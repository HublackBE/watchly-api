{
  "openapi": "3.0.4",
  "info": {
    "title": "Watchly API",
    "version": "0.1.0",
    "description": "Minimal OpenAPI spec for Watchly API v1 (users, movies, platforms)"
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "API v1 base path"
    }
