      "post": {
        "summary": "Remove movie from platform",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "movie_id": {
                    "type": "integer"
                  }
                },
                "required": [
                  "movie_id"
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Removed"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    }
